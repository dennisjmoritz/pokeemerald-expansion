mapscripts FourIsland_LoreleisHouse_MapScripts {
    FourIsland_LoreleisHouse_OnTransition
}

script FourIsland_LoreleisHouse_OnTransition {
// FIXME undefined reference: 	special UpdateLoreleiDollCollection
