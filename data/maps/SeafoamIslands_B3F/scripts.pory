#events for SeafoamIslands_B3F

script SeafoamIslands_B3F_MapScripts {
	map_script MAP_SCRIPT_ON_TRANSITION, SeafoamIslands_B3F_OnTransition
	map_script MAP_SCRIPT_ON_FRAME_TABLE, SeafoamIslands_B3F_OnFrame
	.byte 0

}

script SeafoamIslands_B3F_OnTransition {
	call_if_unset FLAG_STOPPED_SEAFOAM_B3F_CURRENT, SeafoamIslands_B3F_EventScript_CheckStoppedCurrent
	call_if_set FLAG_STOPPED_SEAFOAM_B3F_CURRENT, SeafoamIslands_B3F_EventScript_SetNoCurrentLayout
	end

}

script SeafoamIslands_B3F_EventScript_CheckStoppedCurrent {
	setvar NUM_BOULDERS_PRESENT, 0
	call_if_unset FLAG_HIDE_SEAFOAM_B3F_BOULDER_1, SeafoamIslands_B3F_EventScript_AddBoulderPresent
	call_if_unset FLAG_HIDE_SEAFOAM_B3F_BOULDER_2, SeafoamIslands_B3F_EventScript_AddBoulderPresent
	call_if_eq NUM_BOULDERS_PRESENT, 2, SeafoamIslands_B3F_EventScript_StoppedCurrent
	return

}

script SeafoamIslands_B3F_EventScript_StoppedCurrent {
	setflag FLAG_STOPPED_SEAFOAM_B3F_CURRENT
	return

}

script SeafoamIslands_B3F_EventScript_SetNoCurrentLayout {
// FIXME undefined reference: 	setmaplayoutindex LAYOUT_SEAFOAM_ISLANDS_B3F_CURRENT_STOPPED
	return

}

script SeafoamIslands_B3F_OnFrame {
	map_script_2 VAR_TEMP_1, 1, SeafoamIslands_B3F_EventScript_EnterByFalling
	.2byte 0

}

script SeafoamIslands_B3F_EventScript_EnterByFalling {
	lockall
	setvar NUM_BOULDERS_PRESENT, 0
	call_if_unset FLAG_HIDE_SEAFOAM_B3F_BOULDER_1, SeafoamIslands_B3F_EventScript_AddBoulderPresent
	call_if_unset FLAG_HIDE_SEAFOAM_B3F_BOULDER_2, SeafoamIslands_B3F_EventScript_AddBoulderPresent
	goto_if_eq NUM_BOULDERS_PRESENT, 2, SeafoamIslands_B3F_EventScript_CurrentBlocked
	getplayerxy VAR_0x8008, VAR_0x8009
	call_if_lt VAR_0x8008, 24, SeafoamIslands_B3F_EventScript_RideCurrentFar
	call_if_ge VAR_0x8008, 24, SeafoamIslands_B3F_EventScript_RideCurrentClose
	setvar VAR_TEMP_0, 1
// Replaced VAR_MAP_SCENE_SEAFOAM_ISLANDS_B4F with VAR_TEMP_0
	warp MAP_SEAFOAM_ISLANDS_B4F, 27, 21
	waitstate
	releaseall
	end

}

script SeafoamIslands_B3F_EventScript_AddBoulderPresent {
	addvar NUM_BOULDERS_PRESENT, 1
	return

}

script SeafoamIslands_B3F_EventScript_RideCurrentFar {
	applymovement LOCALID_PLAYER, SeafoamIslands_B3F_Movement_RideCurrentFar
	waitmovement 0
	return

}

script SeafoamIslands_B3F_EventScript_RideCurrentClose {
	applymovement LOCALID_PLAYER, SeafoamIslands_B3F_Movement_RideCurrentClose
	waitmovement 0
	return

}

script SeafoamIslands_B3F_EventScript_CurrentBlocked {
	setvar VAR_TEMP_1, 0
	releaseall
	end

}

script SeafoamIslands_B3F_Movement_RideCurrentFar {
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_right
	walk_fast_right
	walk_fast_right
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_down
	step_end

}

script SeafoamIslands_B3F_Movement_RideCurrentClose {
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_right
	walk_fast_right
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_down
	walk_fast_down
	step_end
}

