mapscripts SootopolisCity_PokemonCenter_1F_MapScripts {
    SootopolisCity_PokemonCenter_1F_OnTransition
    CableClub_OnResume
}

script SootopolisCity_PokemonCenter_1F_EventScript_Nurse {
	setvar VAR_0x800B, LOCALID_SOOTOPOLIS_NURSE
// FIXME undefined reference: 	call Common_EventScript_PkmnCenterNurse
	waitmessage
	waitbuttonpress
	release
	end

}

script SootopolisCity_PokemonCenter_1F_EventScript_Gentleman {
	lock
	faceplayer
	goto_if_ge VAR_SKY_PILLAR_STATE, 2, SootopolisCity_PokemonCenter_1F_EventScript_GentlemanNoLegendaries
	goto_if_unset FLAG_KYOGRE_ESCAPED_SEAFLOOR_CAVERN, SootopolisCity_PokemonCenter_1F_EventScript_GentlemanNoLegendaries
	msgbox SootopolisCity_PokemonCenter_1F_Text_EveryoneTakenRefuge, MSGBOX_DEFAULT
	release
	end

}

script SootopolisCity_PokemonCenter_1F_EventScript_GentlemanNoLegendaries {
	msgbox SootopolisCity_PokemonCenter_1F_Text_WallaceToughestInHoenn, MSGBOX_DEFAULT
	release
	end

}

script SootopolisCity_PokemonCenter_1F_EventScript_Woman {
	lock
	faceplayer
	goto_if_ge VAR_SKY_PILLAR_STATE, 2, SootopolisCity_PokemonCenter_1F_EventScript_WomanNoLegendaries
	goto_if_unset FLAG_KYOGRE_ESCAPED_SEAFLOOR_CAVERN, SootopolisCity_PokemonCenter_1F_EventScript_WomanNoLegendaries
	msgbox SootopolisCity_PokemonCenter_1F_Text_ArentPokemonOurFriends, MSGBOX_DEFAULT
	release
	end

}

script SootopolisCity_PokemonCenter_1F_EventScript_WomanNoLegendaries {
	msgbox SootopolisCity_PokemonCenter_1F_Text_AlwaysBeFriendsWithPokemon, MSGBOX_DEFAULT
	release
	end

}

text SootopolisCity_PokemonCenter_1F_Text_WallaceToughestInHoenn {
    format("WALLACE is rumored to be the toughest TRAINER in the whole HOENN region.\p This town's GYM is led by the TRAINER who taught WALLACE.\p But the ELITE FOUR… They're said to be even stronger than WALLACE's mentor.\p How strong could they be?")
}

text SootopolisCity_PokemonCenter_1F_Text_EveryoneTakenRefuge {
    format("Everyone in town has taken refuge and won't come out of their homes.\p Even I would rather not venture outside.")
}

text SootopolisCity_PokemonCenter_1F_Text_AlwaysBeFriendsWithPokemon {
    format("Whenever, wherever, and whatever happens, I will always be friends with\l POKéMON.\p Because it's fun to be with POKéMON!")
}

text SootopolisCity_PokemonCenter_1F_Text_ArentPokemonOurFriends {
    format("Aren't POKéMON our friends?\p Why are they going wild this way?")
}

