text Route15_WestEntrance_2F_Text_GiveItemIfCaughtEnough {
    format("Hi! Remember me? I'm one of PROF. OAK's AIDES.\p If your POKéDEX has complete data on {STR_VAR_1} species, I'm supposed to\l give you a reward.\p PROF. OAK entrusted me with the {STR_VAR_2} for you.\p So, {PLAYER}, let me ask you.\p Have you gathered data on at least {STR_VAR_1} kinds of POKéMON?")
}

text Route15_WestEntrance_2F_Text_GreatHereYouGo {
    format("Great! You have caught or owned {STR_VAR_3} kinds of POKéMON!\p Congratulations! Here you go!")
}

text Route15_WestEntrance_2F_Text_ReceivedItemFromAide {
    format("{PLAYER} received the {STR_VAR_2} from the AIDE.")
}

text Route15_WestEntrance_2F_Text_ExplainExpShare {
    format("EXP. SHARE is an item to be held by a POKéMON.\p The POKéMON will receive a share of the EXP. Points without having\l to battle.")
}

text Route15_WestEntrance_2F_Text_LargeShiningBird {
    format("Let's see what the binoculars have to show…\p A large, shining bird is flying toward the sea.")
}

text Route15_WestEntrance_2F_Text_SmallIslandOnHorizon {
    format("Let's see what the binoculars have to show…\p It looks like a small island on the horizon!")
}

script Route15_WestEntrance_2F_EventScript_LeftBinoculars {
    lockall
    msgbox(Route15_WestEntrance_2F_Text_LargeShiningBird)
    releaseall
}

script Route15_WestEntrance_2F_EventScript_RightBinoculars {
    lockall
    msgbox(Route15_WestEntrance_2F_Text_SmallIslandOnHorizon)
    releaseall
}

