    format("{PLAYER} received TM03 from MISTY.")
}

text CeruleanCity_Gym_Text_BetterMakeRoomForThis {
    format("You better make room for this!")
}

text CeruleanCity_Gym_Text_MistyDefeat {
    format("Wow! You're too much!\p All right!\p You can have the CASCADEBADGE to show you beat me.")
}

