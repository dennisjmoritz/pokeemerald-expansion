script LilycoveCity_DepartmentStore_5F_EventScript_PokefanF {
	msgbox LilycoveCity_DepartmentStore_5F_Text_PlaceFullOfCuteDolls, MSGBOX_NPC
	end

}

script LilycoveCity_DepartmentStore_5F_EventScript_Woman {
	lockall
	applymovement LOCALID_DEPARTMENT_STORE_STAIRS_WOMAN, Common_Movement_FacePlayer
	waitmovement 0
	goto_if_eq VAR_SOOTOPOLIS_CITY_STATE, 0, LilycoveCity_DepartmentStore_5F_EventScript_WomanNormal
	goto_if_ge VAR_SOOTOPOLIS_CITY_STATE, 4, LilycoveCity_DepartmentStore_5F_EventScript_WomanNormal
	goto LilycoveCity_DepartmentStore_5F_EventScript_WomanLegendaryWeather
	end

}

script LilycoveCity_DepartmentStore_5F_EventScript_WomanNormal {
	msgbox LilycoveCity_DepartmentStore_5F_Text_SellManyCuteMatsHere, MSGBOX_DEFAULT
	closemessage
	releaseall
	end

}

script LilycoveCity_DepartmentStore_5F_EventScript_WomanLegendaryWeather {
	msgbox LilycoveCity_DepartmentStore_5F_Text_ClosedRooftopForWeather, MSGBOX_DEFAULT
	closemessage
	applymovement LOCALID_DEPARTMENT_STORE_STAIRS_WOMAN, Common_Movement_WalkInPlaceFasterUp
	waitmovement 0
	releaseall
	end

}

script LilycoveCity_DepartmentStore_5F_EventScript_LittleGirl {
	msgbox LilycoveCity_DepartmentStore_5F_Text_GettingDollInsteadOfPokemon, MSGBOX_NPC
	end

}

text LilycoveCity_DepartmentStore_5F_Text_PlaceFullOfCuteDolls {
    format("This place is full of cute DOLLS.\p I should buy some for me, instead of just for my children.")
}

text LilycoveCity_DepartmentStore_5F_Text_GettingDollInsteadOfPokemon {
    format("I'm not big enough to raise POKéMON, so I'm getting a cute DOLL instead.")
}

text LilycoveCity_DepartmentStore_5F_Text_SellManyCuteMatsHere {
    format("They sell many cute MATS here.\p I wonder which one I should get? Maybe I'll buy them all…")
}

text LilycoveCity_DepartmentStore_5F_Text_ClosedRooftopForWeather {
    format("I think they closed the rooftop because the weather is wild today.")
}

