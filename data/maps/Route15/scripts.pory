text Route15_Text_KindraIntro {
    format("I just got some POKéMON in trades. Can I try them out on you?")
}

text Route15_Text_KindraDefeat {
    format("Not good enough!")
}

text Route15_Text_KindraPostBattle {
    format("You can't change the nickname of any POKéMON you get in a trade.\p Only the Original TRAINER can get the nickname changed.")
}

text Route15_Text_BeckyIntro {
    format("You look gentle, so I think I can beat you.\p I'll give it a go!")
}

text Route15_Text_BeckyDefeat {
    format("No, wrong!")
}

text Route15_Text_BeckyPostBattle {
    format("I'm afraid of BIKERS. They look so ugly and mean!")
}

text Route15_Text_EdwinIntro {
    format("When I whistle, I can summon bird POKéMON.")
}

text Route15_Text_EdwinDefeat {
    format("Ow! That's tragic!")
}

text Route15_Text_EdwinPostBattle {
    format("Maybe I'm not cut out for battles. I'm not the right type, I guess.")
}

text Route15_Text_ChesterIntro {
    format("Hmm? My birds are shivering! You're good, aren't you?")
}

text Route15_Text_ChesterDefeat {
    format("Just as I thought!")
}

