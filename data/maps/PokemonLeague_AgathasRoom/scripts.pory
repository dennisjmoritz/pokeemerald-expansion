// FIXME undefined reference: 	call PokemonLeague_EventScript_SetDoorOpen
	return

}

script PokemonLeague_AgathasRoom_OnWarp {
	map_script_2 VAR_TEMP_1, 0, PokemonLeague_AgathasRoom_EventScript_TurnPlayerNorth
	.2byte 0

}

script PokemonLeague_AgathasRoom_EventScript_TurnPlayerNorth {
	turnobject LOCALID_PLAYER, DIR_NORTH
	end

}

script PokemonLeague_AgathasRoom_OnFrame {
	map_script_2 VAR_TEMP_0, 2, PokemonLeague_AgathasRoom_EventScript_EnterRoom
// Replaced VAR_MAP_SCENE_POKEMON_LEAGUE with VAR_TEMP_0
	.2byte 0

}

script PokemonLeague_AgathasRoom_EventScript_EnterRoom {
	lockall
// FIXME undefined reference: 	call PokemonLeague_EventScript_EnterRoom
	setvar VAR_TEMP_0, 3
// Replaced VAR_MAP_SCENE_POKEMON_LEAGUE with VAR_TEMP_0
	releaseall
	end

}

script PokemonLeague_AgathasRoom_EventScript_Agatha {
	lock
	faceplayer
@	famechecker FAMECHECKER_AGATHA, FCPICKSTATE_COLORED, UpdatePickStateFromSpecialVar8005
	goto_if_set FLAG_TEMP_1, PokemonLeague_AgathasRoom_EventScript_PostBattle
// Replaced FLAG_DEFEATED_AGATHA with FLAG_TEMP_1
@	famechecker FAMECHECKER_AGATHA, 0
@	famechecker FAMECHECKER_AGATHA, 4
@	famechecker FAMECHECKER_OAK, 4
	call_if_unset FLAG_SYS_GAME_CLEAR, PokemonLeague_AgathasRoom_EventScript_Intro
	call_if_set FLAG_SYS_GAME_CLEAR, PokemonLeague_AgathasRoom_EventScript_RematchIntro
	setflag FLAG_TEMP_3
	setflag FLAG_TEMP_5
	call_if_unset FLAG_TEMP_1, PokemonLeague_AgathasRoom_EventScript_Battle
// Replaced FLAG_SYS_CAN_LINK_WITH_RS with FLAG_TEMP_1
	call_if_set FLAG_TEMP_1, PokemonLeague_AgathasRoom_EventScript_Rematch
// Replaced FLAG_SYS_CAN_LINK_WITH_RS with FLAG_TEMP_1
	clearflag FLAG_TEMP_5
	goto PokemonLeague_AgathasRoom_EventScript_DefeatedAgatha
	end

}

