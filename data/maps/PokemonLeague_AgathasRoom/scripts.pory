	setvar VAR_0x8004, 2
// FIXME undefined reference: 	call PokemonLeague_EventScript_DoLightingEffect
	end

}

script PokemonLeague_AgathasRoom_OnLoad {
	call_if_set FLAG_TEMP_1, PokemonLeague_AgathasRoom_EventScript_SetDoorOpen
// Replaced FLAG_DEFEATED_AGATHA with FLAG_TEMP_1
	call_if_eq VAR_TEMP_0, 3, PokemonLeague_AgathasRoom_EventScript_CloseEntry
// Replaced VAR_MAP_SCENE_POKEMON_LEAGUE with VAR_TEMP_0
	end

}

