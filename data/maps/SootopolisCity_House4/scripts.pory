mapscripts SootopolisCity_House4_MapScripts {
}

script SootopolisCity_House4_EventScript_Man {
	msgbox SootopolisCity_House4_Text_AncientTreasuresWaitingInSea, MSGBOX_NPC
	end

}

script SootopolisCity_House4_EventScript_Woman {
	msgbox SootopolisCity_House4_Text_StrollUnderwaterWithPokemon, MSGBOX_NPC
	end

}

script SootopolisCity_House4_EventScript_Azumarill {
	lock
	faceplayer
	waitse
	playmoncry SPECIES_AZUMARILL, CRY_MODE_NORMAL
	msgbox SootopolisCity_House4_Text_Azumarill, MSGBOX_DEFAULT
	waitmoncry
	release
	end

}

text SootopolisCity_House4_Text_AncientTreasuresWaitingInSea {
    format("Listen up, and I'll tell you something good.\p There's supposed to be an ancient ruin in the sea around here.\p There could be treasures just waiting to be discovered down there.")
}

text SootopolisCity_House4_Text_StrollUnderwaterWithPokemon {
    format("Ancient treasures…\p It would be nice if they existed, but even if they didn't, it would be so\l beautiful to take an underwater\l stroll with my POKéMON.")
}

text SootopolisCity_House4_Text_Azumarill {
    format("AZUMARILL: Marurii.")
}

