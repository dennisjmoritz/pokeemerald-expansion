mapscripts OldaleTown_PokemonCenter_1F_MapScripts {
    OldaleTown_PokemonCenter_1F_OnTransition
    CableClub_OnResume
}

script OldaleTown_PokemonCenter_1F_EventScript_Nurse {
	setvar VAR_0x800B, LOCALID_OLDALE_NURSE
// FIXME undefined reference: 	call Common_EventScript_PkmnCenterNurse
	waitmessage
	waitbuttonpress
	release
	end

}

script OldaleTown_PokemonCenter_1F_EventScript_Gentleman {
	msgbox OldaleTown_PokemonCenter_1F_Text_TrainersCanUsePC, MSGBOX_NPC
	end

}

script OldaleTown_PokemonCenter_1F_EventScript_Boy {
	msgbox OldaleTown_PokemonCenter_1F_Text_PokemonCentersAreGreat, MSGBOX_NPC
	end

}

script OldaleTown_PokemonCenter_1F_EventScript_Girl {
	lock
	faceplayer
	goto_if_set FLAG_SYS_POKEDEX_GET, OldaleTown_PokemonCenter_1F_EventScript_WirelessClubAvailable
	msgbox OldaleTown_PokemonCenter_1F_Text_WirelessClubNotAvailable, MSGBOX_DEFAULT
	release
	end

}

script OldaleTown_PokemonCenter_1F_EventScript_WirelessClubAvailable {
	msgbox OldaleTown_PokemonCenter_1F_Text_TradedInWirelessClub, MSGBOX_DEFAULT
	release
	end

}

text OldaleTown_PokemonCenter_1F_Text_TrainersCanUsePC {
    format("That PC in the corner there is for any POKéMON TRAINER to use.\p Naturally, that means you're welcome to use it, too.")
}

text OldaleTown_PokemonCenter_1F_Text_PokemonCentersAreGreat {
    format("POKéMON CENTERS are great!\p You can use their services as much as you like, and it's all for free.\l You never have to worry!")
}

text OldaleTown_PokemonCenter_1F_Text_WirelessClubNotAvailable {
    format("The POKéMON WIRELESS CLUB on the second floor was built recently.\p But they say they're still making adjustments.")
}

text OldaleTown_PokemonCenter_1F_Text_TradedInWirelessClub {
    format("The POKéMON WIRELESS CLUB on the second floor was built recently.\p I traded POKéMON right away.")
}

