text PalletTown_RivalsHouse_Text_HiBrothersAtLab {
    format("DAISY: Hi, {PLAYER}!\p My brother, {RIVAL}, is out at Grandpa's LAB.")
}

text PalletTown_RivalsHouse_Text_HeardYouBattledRival {
    format("DAISY: {PLAYER}, I heard you had a battle against {RIVAL}.\p I wish I'd seen that!")
}

text PalletTown_RivalsHouse_Text_ErrandForGrandpaThisWillHelp {
    format("Grandpa asked you to run an errand?\p Gee, that's lazy of him. Here, this will help you.")
}

text PalletTown_RivalsHouse_Text_ReceivedTownMapFromDaisy {
    format("{PLAYER} received a TOWN MAP from DAISY.")
}

text PalletTown_RivalsHouse_Text_DontHaveSpaceForThis {
    format("You don't have space for this in your BAG.")
}

text PalletTown_RivalsHouse_Text_ExplainTownMap {
    format("You can use the TOWN MAP to find out where you are, or check the\l names of places.")
}

text PalletTown_RivalsHouse_Text_PleaseGiveMonsRest {
    format("DAISY: Just like people, POKéMON are living things.\p When they get tired, please give them a rest.")
}

text PalletTown_RivalsHouse_Text_ItsBigMapOfKanto {
    format("It's a big map of the KANTO region. Now this would be useful!")
}

text PalletTown_RivalsHouse_Text_ShelvesCrammedFullOfBooks {
    format("The shelves are crammed full of books on POKéMON.")
}

text PalletTown_RivalsHouse_Text_LikeMeToGroomMon {
    format("DAISY: Hi, {PLAYER}! Good timing.\p I'm about to have some tea. Would you like to join me?\p Oh, but look. Your POKéMON are a little dirty.\p Would you like me to groom one?")
}

text PalletTown_RivalsHouse_Text_DontNeedAnyGrooming {
    format("You don't need any grooming done? Okay, we'll just have tea.")
}

text PalletTown_RivalsHouse_Text_GroomWhichOne {
    format("Which one should I groom?")
}

text PalletTown_RivalsHouse_Text_LookingNiceInNoTime {
    format("DAISY: Okay, I'll get it looking nice in no time.")
}

text PalletTown_RivalsHouse_Text_ThereYouGoAllDone {
    format("{COLOR DARK_GRAY}{STR_VAR_1} looks dreamily content…\p {COLOR RED}DAISY: There you go! All done. {FONT_NORMAL}{STR_VAR_1} looks dreamily content…\p {FONT_FEMALE}DAISY: There you go! All done. See? Doesn't it look nice?\p Giggle… It's such a cute POKéMON.")
}

text PalletTown_RivalsHouse_Text_CantGroomAnEgg {
    format("Oh, sorry. I honestly can't groom an EGG.")
}

text PalletTown_RivalsHouse_Text_MayISeeFirstMon {
    format("DAISY: Your POKéMON grow to love you if you raise them with love.\p For example, {PLAYER}, may I see your first POKéMON?")
}

text PalletTown_RivalsHouse_Text_CouldntLoveYouMore {
    format("It couldn't possibly love you any more than it does now.\p Your POKéMON is happy beyond words.")
}

text PalletTown_RivalsHouse_Text_ItLooksVeryHappy {
    format("It looks very happy.\p I wish {RIVAL} could see this and learn something from it.")
}

text PalletTown_RivalsHouse_Text_ItsQuiteFriendly {
    format("It's quite friendly with you. Keep being good to it!")
}

text PalletTown_RivalsHouse_Text_ItsWarmingUpToYou {
    format("It's warming up to you. Trust must be growing between you.")
}

text PalletTown_RivalsHouse_Text_NotFamiliarWithYouYet {
    format("It's not quite familiar with you yet.\p POKéMON are all quite wary when you first get them.")
}

text PalletTown_RivalsHouse_Text_DontLikeWayItGlaresAtYou {
    format("{PLAYER}, I don't like the way it glares at you.\p Could you try being a little nicer to it?")
}

text PalletTown_RivalsHouse_Text_WhyWouldMonHateYouSoMuch {
    format("…Um, it's not easy for me to say this, but…\p Is there some reason why your POKéMON would hate you so much?")
}

text PalletTown_RivalsHouse_Text_LovelyAndSweetClefairy {
    format("“The lovely and sweet CLEFAIRY”")
}

