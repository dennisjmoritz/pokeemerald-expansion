#events for PetalburgCity_Mart

script PetalburgCity_Mart_MapScripts {
	.byte 0

}

script PetalburgCity_Mart_EventScript_Clerk {
	lock
	faceplayer
	message gText_HowMayIServeYou
	waitmessage
	goto_if_set FLAG_PETALBURG_MART_EXPANDED_ITEMS, PetalburgCity_Mart_EventScript_ExpandedItems
	pokemart PetalburgCity_Mart_Pokemart_Basic
// FIXME undefined reference: 	msgbox gText_PleaseComeAgain, MSGBOX_DEFAULT
	release
	end

	.align 2
}

script PetalburgCity_Mart_EventScript_ExpandedItems {
	pokemart PetalburgCity_Mart_Pokemart_Expanded
// FIXME undefined reference: 	msgbox gText_PleaseComeAgain, MSGBOX_DEFAULT
	release
	end

	.align 2
}

script PetalburgCity_Mart_EventScript_Woman {
	msgbox PetalburgCity_Mart_Text_WeakWillGrowStronger, MSGBOX_NPC
	end

}

script PetalburgCity_Mart_EventScript_Boy {
	msgbox PetalburgCity_Mart_Text_RepelIsUseful, MSGBOX_NPC
	end

}

script PetalburgCity_Mart_EventScript_Man {
	msgbox PetalburgCity_Mart_Text_TakeSomeAntidotesWithYou, MSGBOX_NPC
	end

}

text PetalburgCity_Mart_Text_WeakWillGrowStronger {
    format("Even if a POKéMON is weak now, it will grow stronger.\p The most important thing is love! Love for your POKéMON!")
}

text PetalburgCity_Mart_Text_RepelIsUseful {
    format("Do you use REPEL? It keeps POKéMON away, so it's\l useful when you're in a hurry.")
}

text PetalburgCity_Mart_Text_TakeSomeAntidotesWithYou {
    format("Do you have any ANTIDOTES with you?\p If you walk around with a poisoned POKéMON, it will lose HP until it faints.\l Take some ANTIDOTES with you.")
}

