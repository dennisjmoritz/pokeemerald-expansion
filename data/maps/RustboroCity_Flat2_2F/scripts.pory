#events for RustboroCity_Flat2_2F

script RustboroCity_Flat2_2F_MapScripts {
	.byte 0

}

script RustboroCity_Flat2_2F_EventScript_OldMan {
	msgbox RustboroCity_Flat2_2F_Text_DevonWasTinyInOldDays, MSGBOX_NPC
	end

}

script RustboroCity_Flat2_2F_EventScript_NinjaBoy {
	lock
	faceplayer
	goto_if_set FLAG_RECEIVED_PREMIER_BALL_RUSTBORO, RustboroCity_Flat2_2F_EventScript_GavePremierBall
	msgbox RustboroCity_Flat2_2F_Text_MyDaddyMadeThisYouCanHaveIt, MSGBOX_DEFAULT
	giveitem ITEM_PREMIER_BALL
	goto_if_eq VAR_RESULT, FALSE, Common_EventScript_ShowBagIsFull
	setflag FLAG_RECEIVED_PREMIER_BALL_RUSTBORO
	release
	end

}

script RustboroCity_Flat2_2F_EventScript_GavePremierBall {
	msgbox RustboroCity_Flat2_2F_Text_GoingToWorkAtDevonToo, MSGBOX_DEFAULT
	release
	end

}

text RustboroCity_Flat2_2F_Text_DevonWasTinyInOldDays {
    format("Way back in the old days, DEVON was just a teeny, tiny company.")
}

text RustboroCity_Flat2_2F_Text_MyDaddyMadeThisYouCanHaveIt {
    format("My daddy's working at the CORPORATION.\p My daddy made this! But I can't use it, so you can have it.")
}

text RustboroCity_Flat2_2F_Text_GoingToWorkAtDevonToo {
    format("My daddy's working at the CORPORATION.\p When I grow up, I'm going to work for DEVON, too.")
}

