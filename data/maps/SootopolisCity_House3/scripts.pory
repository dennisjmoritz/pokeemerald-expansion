#events for SootopolisCity_House3

script SootopolisCity_House3_MapScripts {
	.byte 0

}

script SootopolisCity_House3_EventScript_Woman {
	lock
	faceplayer
	msgbox SootopolisCity_House3_Text_JuanHasManyFansDoYou, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, YES, SootopolisCity_House3_EventScript_HaveFans
	msgbox SootopolisCity_House3_Text_LonesomeTryWorkingHarder, MSGBOX_DEFAULT
	release
	end

}

script SootopolisCity_House3_EventScript_HaveFans {
	msgbox SootopolisCity_House3_Text_YouMustBePrettyStrong, MSGBOX_DEFAULT
	release
	end

}

script SootopolisCity_House3_EventScript_Girl {
	msgbox SootopolisCity_House3_Text_TrainerFanClubWasWild, MSGBOX_NPC
	end

}

text SootopolisCity_House3_Text_JuanHasManyFansDoYou {
    format("You're a POKéMON TRAINER, aren't you?\p SOOTOPOLIS's JUAN has many fans. Even more than his student WALLACE!\p Do you have any?")
}

text SootopolisCity_House3_Text_YouMustBePrettyStrong {
    format("Oh, then you must be pretty strong.")
}

text SootopolisCity_House3_Text_LonesomeTryWorkingHarder {
    format("Oh, dear… That's a little lonesome.\p Try working a little harder to get a fan following.")
}

text SootopolisCity_House3_Text_TrainerFanClubWasWild {
    format("Dedicated fans come over from even outside of HOENN.\p It was really wild when I went to the TRAINER FAN CLUB in LILYCOVE.")
}

