#events for PacifidlogTown_House4

script PacifidlogTown_House4_MapScripts {
	.byte 0

}

script PacifidlogTown_House4_EventScript_LittleGirl {
	msgbox PacifidlogTown_House4_Text_SkyPokemon, MSGBOX_NPC
	end

}

script PacifidlogTown_House4_EventScript_Woman {
	msgbox PacifidlogTown_House4_Text_PeopleSawHighFlyingPokemon, MSGBOX_NPC
	end

}

script PacifidlogTown_House4_EventScript_Boy {
	lock
	faceplayer
	msgbox PacifidlogTown_House4_Text_WhereDidYouComeFrom, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, YES, PacifidlogTown_House4_EventScript_Yes
	goto_if_eq VAR_RESULT, NO, PacifidlogTown_House4_EventScript_No
	end

}

script PacifidlogTown_House4_EventScript_Yes {
	msgbox PacifidlogTown_House4_Text_YesTown, MSGBOX_DEFAULT
	release
	end

}

script PacifidlogTown_House4_EventScript_No {
	msgbox PacifidlogTown_House4_Text_YouHaveToComeFromSomewhere, MSGBOX_DEFAULT
	release
	end

}

text PacifidlogTown_House4_Text_PeopleSawHighFlyingPokemon {
    format("People were saying they saw a POKéMON flying high above HOENN.\p Is it flying around all the time? Doesn't it need to rest somewhere?")
}

text PacifidlogTown_House4_Text_SkyPokemon {
    format("A sky POKéMON! A sky POKéMON!")
}

text PacifidlogTown_House4_Text_WhereDidYouComeFrom {
    format("Where did you come from?")
}

text PacifidlogTown_House4_Text_YesTown {
    format("Yes? YES TOWN?\p I've never heard of a place like that.")
}

text PacifidlogTown_House4_Text_YouHaveToComeFromSomewhere {
    format("No? That doesn't make any sense. You have to come from somewhere.\p Oh! Wait! You're not going to say you were born at the bottom of the sea?")
}

