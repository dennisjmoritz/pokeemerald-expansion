mapscripts VermilionCity_PokemonCenter_1F_MapScripts {
    MAP_SCRIPT_ON_TRANSITION: VermilionCity_PokemonCenter_1F_OnTransition
    MAP_SCRIPT_ON_RESUME: CableClub_OnResume
