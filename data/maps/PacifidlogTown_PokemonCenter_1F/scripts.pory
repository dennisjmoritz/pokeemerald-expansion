#events for PacifidlogTown_PokemonCenter_1F

script PacifidlogTown_PokemonCenter_1F_MapScripts {
	map_script MAP_SCRIPT_ON_TRANSITION, PacifidlogTown_PokemonCenter_1F_OnTransition
	map_script MAP_SCRIPT_ON_RESUME, CableClub_OnResume
	.byte 0

}

script PacifidlogTown_PokemonCenter_1F_EventScript_Nurse {
	setvar VAR_0x800B, LOCALID_PACIFIDLOG_NURSE
// FIXME undefined reference: 	call Common_EventScript_PkmnCenterNurse
	waitmessage
	waitbuttonpress
	release
	end

}

script PacifidlogTown_PokemonCenter_1F_EventScript_Girl {
	msgbox PacifidlogTown_PokemonCenter_1F_Text_WhatColorTrainerCard, MSGBOX_NPC
	end

}

script PacifidlogTown_PokemonCenter_1F_EventScript_Woman {
	msgbox PacifidlogTown_PokemonCenter_1F_Text_OnColonyOfCorsola, MSGBOX_NPC
	end

}

script PacifidlogTown_PokemonCenter_1F_EventScript_OldMan {
	msgbox PacifidlogTown_PokemonCenter_1F_Text_AncestorsLivedOnBoats, MSGBOX_NPC
	end

}

text PacifidlogTown_PokemonCenter_1F_Text_WhatColorTrainerCard {
    format("What color is your TRAINER CARD? Mine's copper!")
}

text PacifidlogTown_PokemonCenter_1F_Text_OnColonyOfCorsola {
    format("PACIFIDLOG TOWN floats on top of a colony of CORSOLA.\p If I told you that, would you believe me?")
}

text PacifidlogTown_PokemonCenter_1F_Text_AncestorsLivedOnBoats {
    format("The ancestors of the people in PACIFIDLOG were said to have been\l born on boats and then lived and died \l aboard them.\p I understand that they lived that way because they were searching for\l something.")
}

