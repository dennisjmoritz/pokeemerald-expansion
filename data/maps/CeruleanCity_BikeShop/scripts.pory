#events for CeruleanCity_BikeShop

script CeruleanCity_BikeShop_MapScripts {
	.byte 0

}

script CeruleanCity_BikeShop_EventScript_Clerk {
	lock
	faceplayer
	goto_if_set FLAG_TEMP_1, CeruleanCity_BikeShop_EventScript_AlreadyGotBicycle
// Replaced FLAG_GOT_BICYCLE with FLAG_TEMP_1
	goto_if_set FLAG_TEMP_1, CeruleanCity_BikeShop_EventScript_ExchangeBikeVoucher
// Replaced FLAG_GOT_BIKE_VOUCHER with FLAG_TEMP_1
	showmoneybox 0, 0
	message CeruleanCity_BikeShop_Text_WelcomeToBikeShop
	waitmessage
// FIXME undefined reference: 	multichoice 11, 0, MULTICHOICE_BIKE_SHOP, FALSE
	switch VAR_RESULT
	case 0, CeruleanCity_BikeShop_EventScript_TryPurchaseBicycle
	case 1, CeruleanCity_BikeShop_EventScript_ClerkGoodbye
	case 127, CeruleanCity_BikeShop_EventScript_ClerkGoodbye
	end

@ The Bicycle price / players money is never actually checked
}

script CeruleanCity_BikeShop_EventScript_TryPurchaseBicycle {
	msgbox CeruleanCity_BikeShop_Text_SorryYouCantAffordIt
	goto CeruleanCity_BikeShop_EventScript_ClerkGoodbye
	end

}

script CeruleanCity_BikeShop_EventScript_ClerkGoodbye {
	msgbox CeruleanCity_BikeShop_Text_ThankYouComeAgain
	hidemoneybox
	release
	end

}

script CeruleanCity_BikeShop_EventScript_ExchangeBikeVoucher {
	msgbox CeruleanCity_BikeShop_Text_OhBikeVoucherHereYouGo
//	msgreceiveditem CeruleanCity_BikeShop_Text_ExchangedVoucherForBicycle, ITEM_BICYCLE, 1, MUS_OBTAIN_KEY_ITEM
	setflag FLAG_TEMP_1
// Replaced FLAG_GOT_BICYCLE with FLAG_TEMP_1
	additem ITEM_BICYCLE
	removeitem ITEM_BIKE_VOUCHER
	msgbox CeruleanCity_BikeShop_Text_ThankYouComeAgain
	release
	end

}

script CeruleanCity_BikeShop_EventScript_AlreadyGotBicycle {
	msgbox CeruleanCity_BikeShop_Text_HowDoYouLikeNewBicycle
	release
	end

@ Unused
}

script CeruleanCity_BikeShop_EventScript_NoRoomForBicycle {
	msgbox CeruleanCity_BikeShop_Text_MakeRoomForBicycle
	release
	end

}

script CeruleanCity_BikeShop_EventScript_Woman {
	msgbox CeruleanCity_BikeShop_Text_CityBikeGoodEnoughForMe, MSGBOX_NPC
	end

}

script CeruleanCity_BikeShop_EventScript_Youngster {
	lock
	faceplayer
	goto_if_set FLAG_TEMP_1, CeruleanCity_BikeShop_EventScript_YoungsterHaveBike
// Replaced FLAG_GOT_BICYCLE with FLAG_TEMP_1
	msgbox CeruleanCity_BikeShop_Text_BikesCoolButExpensive
	release
	end

}

script CeruleanCity_BikeShop_EventScript_YoungsterHaveBike {
	msgbox CeruleanCity_BikeShop_Text_WowYourBikeIsCool
	release
	end

}

script CeruleanCity_BikeShop_EventScript_Bicycle {
	msgbox CeruleanCity_BikeShop_Text_ShinyNewBicycle, MSGBOX_SIGN
	end

}

