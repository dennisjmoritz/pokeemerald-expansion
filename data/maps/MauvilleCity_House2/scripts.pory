#events for MauvilleCity_House2

script MauvilleCity_House2_MapScripts {
	.byte 0

}

script MauvilleCity_House2_EventScript_Woman {
	lock
	faceplayer
	goto_if_set FLAG_RECEIVED_COIN_CASE, MauvilleCity_House2_EventScript_ReceivedCoinCase
	msgbox MauvilleCity_House2_Text_BuyHarborMailAtSlateport, MSGBOX_DEFAULT
	checkitem ITEM_HARBOR_MAIL
	goto_if_eq VAR_RESULT, TRUE, MauvilleCity_House2_EventScript_AskToTradeForHarborMail
	release
	end

}

script MauvilleCity_House2_EventScript_AskToTradeForHarborMail {
	playse SE_PIN
	applymovement VAR_LAST_TALKED, Common_Movement_ExclamationMark
	waitmovement 0
	applymovement VAR_LAST_TALKED, Common_Movement_Delay48
	waitmovement 0
	msgbox MauvilleCity_House2_Text_TradeHarborMailForCoinCase, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, YES, MauvilleCity_House2_EventScript_AcceptTrade
	goto_if_eq VAR_RESULT, NO, MauvilleCity_House2_EventScript_DeclineTrade
	end

}

script MauvilleCity_House2_EventScript_AcceptTrade {
	msgbox MauvilleCity_House2_Text_IllTradeYouCoinCase, MSGBOX_DEFAULT
	giveitem ITEM_COIN_CASE
	goto_if_eq VAR_RESULT, FALSE, Common_EventScript_ShowBagIsFull
	removeitem ITEM_HARBOR_MAIL
	setflag FLAG_RECEIVED_COIN_CASE
	goto MauvilleCity_House2_EventScript_ReceivedCoinCase
	end

}

script MauvilleCity_House2_EventScript_ReceivedCoinCase {
	msgbox MauvilleCity_House2_Text_UseCoinCaseAtGameCorner, MSGBOX_DEFAULT
	release
	end

}

script MauvilleCity_House2_EventScript_DeclineTrade {
	msgbox MauvilleCity_House2_Text_ThatsDisappointing, MSGBOX_DEFAULT
	release
	end

}

text MauvilleCity_House2_Text_BuyHarborMailAtSlateport {
    format("If I had a BIKE, it'd be easy to cycle to SLATEPORT for some shopping.\p I'd be able to buy HARBOR MAIL at the POKéMON MART in SLATEPORT…")
}

text MauvilleCity_House2_Text_TradeHarborMailForCoinCase {
    format("Oh! You have HARBOR MAIL? Will you trade it for a COIN CASE?")
}

text MauvilleCity_House2_Text_IllTradeYouCoinCase {
    format("Oh, I'm so happy! Okay, I'll trade you a COIN CASE!")
}

text MauvilleCity_House2_Text_UseCoinCaseAtGameCorner {
    format("That COIN CASE can be used at the GAME CORNER.")
}

text MauvilleCity_House2_Text_ThatsDisappointing {
    format("Oh, that's disappointing.\p A COIN CASE is needed for the GAME CORNER.")
}

