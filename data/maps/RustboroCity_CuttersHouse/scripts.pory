#events for RustboroCity_CuttersHouse

script RustboroCity_CuttersHouse_MapScripts {
	.byte 0

}

script RustboroCity_CuttersHouse_EventScript_Cutter {
	lock
	faceplayer
	goto_if_set FLAG_RECEIVED_HM_CUT, RustboroCity_CuttersHouse_EventScript_ExplainCut
	msgbox RustboroCity_CuttersHouse_Text_YouCanPutThisHMToGoodUse, MSGBOX_DEFAULT
	giveitem ITEM_HM_CUT
	setflag FLAG_RECEIVED_HM_CUT
	msgbox RustboroCity_CuttersHouse_Text_ExplainCut, MSGBOX_DEFAULT
	release
	end

}

script RustboroCity_CuttersHouse_EventScript_ExplainCut {
	msgbox RustboroCity_CuttersHouse_Text_ExplainCut, MSGBOX_DEFAULT
	release
	end

}

script RustboroCity_CuttersHouse_EventScript_Lass {
	msgbox RustboroCity_CuttersHouse_Text_DadHelpedClearLandOfTrees, MSGBOX_NPC
	end

}

text RustboroCity_CuttersHouse_Text_YouCanPutThisHMToGoodUse {
    format("That determined expression… That limber way you move…\l And your well-trained POKéMON…\p You're obviously a skilled TRAINER!\p No, wait, don't say a word. I can tell just by looking at you.\p I'm sure that you can put this HIDDEN MACHINE to good use.\p No need to be modest or shy. Go on, take it!")
}

text RustboroCity_CuttersHouse_Text_ExplainCut {
    format("That HIDDEN MACHINE, or HM for short, is CUT.\p An HM move is one that can be used by POKéMON outside of battle.\p Any POKéMON that's learned CUT can chop down thin trees if the TRAINER\l has earned the STONE BADGE.\p And, unlike a TM, an HM can be used more than once.")
}

text RustboroCity_CuttersHouse_Text_DadHelpedClearLandOfTrees {
    format("When they were expanding the city of RUSTBORO, my dad helped out.\p He made his POKéMON use CUT to clear the land of trees.")
}

