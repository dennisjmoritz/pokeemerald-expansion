#events for PacifidlogTown_House5

script PacifidlogTown_House5_MapScripts {
	.byte 0

}

script PacifidlogTown_House5_EventScript_MirageIslandWatcher {
	lock
	faceplayer
	specialvar VAR_RESULT, IsMirageIslandPresent
	goto_if_eq VAR_RESULT, TRUE, PacifidlogTown_House5_EventScript_MirageIslandPresent
	msgbox PacifidlogTown_House5_Text_CantSeeMirageIslandToday, MSGBOX_DEFAULT
	release
	end

}

script PacifidlogTown_House5_EventScript_MirageIslandPresent {
	msgbox PacifidlogTown_House5_Text_CanSeeMirageIslandToday, MSGBOX_DEFAULT
	release
	end

}

script PacifidlogTown_House5_EventScript_Gentleman {
	msgbox PacifidlogTown_House5_Text_MirageIslandAppearDependingOnWeather, MSGBOX_NPC
	end

}

text PacifidlogTown_House5_Text_CantSeeMirageIslandToday {
    format("I can't see MIRAGE ISLAND today…")
}

text PacifidlogTown_House5_Text_CanSeeMirageIslandToday {
    format("Oh! Oh my! I can see MIRAGE ISLAND today!")
}

text PacifidlogTown_House5_Text_MirageIslandAppearDependingOnWeather {
    format("MIRAGE ISLAND…\p It must become visible and invisible depending on the weather conditions\l that make mirages appear.\p Or is it really appearing and disappearing?")
}

