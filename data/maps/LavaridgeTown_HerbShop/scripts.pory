mapscripts LavaridgeTown_HerbShop_MapScripts {
}


text LavaridgeTown_HerbShop_Text_WelcomeToHerbShop {
    format("Welcome to the HERB SHOP, home of effective and inexpensive medicine!")
}

text LavaridgeTown_HerbShop_Text_YouveComeToLookAtHerbalMedicine {
    format("You've come to look at herbal medicine in LAVARIDGE?\p That's rather commendable.\p I like you! Take this!")
}

text LavaridgeTown_HerbShop_Text_ExplainCharcoal {
    format("That CHARCOAL I gave you, it's used for making herbal medicine.\p It also does wonders when held by a POKMON.\p It intensifies the power of FIRE-type moves.")
}

text LavaridgeTown_HerbShop_Text_HerbalMedicineWorksButMonWillDislike {
    format("Herbal medicine works impressively well. But your POKMON will dislike you for it.\l It must be horribly bitter!")
}

