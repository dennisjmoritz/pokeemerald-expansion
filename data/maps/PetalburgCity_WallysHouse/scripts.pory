#events for PetalburgCity_WallysHouse

script PetalburgCity_WallysHouse_MapScripts {
	map_script MAP_SCRIPT_ON_FRAME_TABLE, PetalburgCity_WallysHouse_OnFrame
	map_script MAP_SCRIPT_ON_WARP_INTO_MAP_TABLE, PetalburgCity_WallysHouse_OnWarp
	.byte 0

}

script PetalburgCity_WallysHouse_EventScript_PlayerWallysDadFaceEachOther {
	turnobject LOCALID_PLAYER, DIR_EAST
	turnobject LOCALID_WALLYS_HOUSE_WALLYS_DAD, DIR_WEST
	end

}

script PetalburgCity_WallysHouse_EventScript_GiveHMSurf {
	lockall
	msgbox PetalburgCity_WallysHouse_Text_PleaseExcuseUs, MSGBOX_DEFAULT
	giveitem ITEM_HM_SURF
	setflag FLAG_RECEIVED_HM_SURF
	msgbox PetalburgCity_WallysHouse_Text_SurfGoAllSortsOfPlaces, MSGBOX_DEFAULT
	setvar VAR_PETALBURG_CITY_STATE, 5
	releaseall
	end

}

script PetalburgCity_WallysHouse_EventScript_WallysDad {
	lock
	faceplayer
	goto_if_set FLAG_DEFEATED_WALLY_VICTORY_ROAD, PetalburgCity_WallysHouse_EventScript_DefeatedWallyInVictoryRoad
	goto_if_set FLAG_RECEIVED_HM_SURF, PetalburgCity_WallysHouse_EventScript_ReceievedHMSurf
	goto_if_set FLAG_THANKED_FOR_PLAYING_WITH_WALLY, PetalburgCity_WallysHouse_EventScript_PlayedWithWally
	msgbox PetalburgCity_WallysHouse_Text_ThanksForPlayingWithWally, MSGBOX_DEFAULT
	setflag FLAG_THANKED_FOR_PLAYING_WITH_WALLY
	release
	end

}

script PetalburgCity_WallysHouse_EventScript_ReceievedHMSurf {
	msgbox PetalburgCity_WallysHouse_Text_WallyIsComingHomeSoon, MSGBOX_DEFAULT
	release
	end

}

script PetalburgCity_WallysHouse_EventScript_DefeatedWallyInVictoryRoad {
	msgbox PetalburgCity_WallysHouse_Text_YouMetWallyInEverGrandeCity, MSGBOX_DEFAULT
	release
	end

}

script PetalburgCity_WallysHouse_EventScript_PlayedWithWally {
	msgbox PetalburgCity_WallysHouse_Text_WonderHowWallyIsDoing, MSGBOX_DEFAULT
	release
	end

}

script PetalburgCity_WallysHouse_EventScript_WallysMom {
	lock
	faceplayer
	goto_if_set FLAG_RECEIVED_HM_SURF, PetalburgCity_WallysHouse_EventScript_ReceivedHMSurf
	msgbox PetalburgCity_WallysHouse_Text_WallyWasReallyHappy, MSGBOX_DEFAULT
	release
	end

}

script PetalburgCity_WallysHouse_EventScript_ReceivedHMSurf {
	msgbox PetalburgCity_WallysHouse_Text_WallyLeftWithoutTelling, MSGBOX_DEFAULT
	release
	end

}

text PetalburgCity_WallysHouse_Text_ThanksForPlayingWithWally {
    format("You're… Ah, you must be {PLAYER}{KUN}, right?\p Thank you for playing with WALLY a little while ago.\p He's been frail and sickly ever since he was a baby.\p We've sent him to stay with my relatives in VERDANTURF TOWN for a while.\p The air is a lot cleaner there than it is here.\p What's that? Where's WALLY? He's already left, our WALLY.\p I wonder where he could have gotten by now?")
}

text PetalburgCity_WallysHouse_Text_WonderHowWallyIsDoing {
    format("I wonder how our WALLY is doing?")
}

text PetalburgCity_WallysHouse_Text_PleaseExcuseUs {
    format("{PLAYER}{KUN}! Please excuse us for dragging you here this way.\p But our WALLY's become very healthy since he went to VERDANTURF TOWN.\p We owe it all to you!\p When WALLY left town, you helped him catch a POKéMON, right?\p I think that made WALLY really happy.\p Actually, not just WALLY. It made me, his father, happy too.\p Happy that he's gained such a great friend as you.\p This isn't a bribe or anything, but I'd really like you to have this.")
}

text PetalburgCity_WallysHouse_Text_SurfGoAllSortsOfPlaces {
    format("If your POKéMON can SURF, you'll be able to go to all sorts of places.")
}

text PetalburgCity_WallysHouse_Text_WallyIsComingHomeSoon {
    format("WALLY's coming home soon. I'm looking forward to that.")
}

text PetalburgCity_WallysHouse_Text_YouMetWallyInEverGrandeCity {
    format("Oh? You met WALLY in EVER GRANDE CITY?\p Oh, {PLAYER}{KUN}, don't be silly.\p He may have gotten healthy, but he can't go somewhere far away like\l that all by himself.")
}

text PetalburgCity_WallysHouse_Text_WallyWasReallyHappy {
    format("WALLY was really happy when he told us that he caught a POKéMON.\p It's been ages since I've seen him smile like that.")
}

text PetalburgCity_WallysHouse_Text_WallyLeftWithoutTelling {
    format("I want you to keep this a secret from my husband…\p But our WALLY left VERDANTURF TOWN without telling anyone.\p You know, WALLY is frail, but he's surprisingly strong-willed.\p I'm sure that he'll come back safe and sound one day!")
}

