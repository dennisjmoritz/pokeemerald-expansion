mapscripts PetalburgCity_WallysHouse_MapScripts {
    MAP_SCRIPT_ON_FRAME_TABLE: PetalburgCity_WallysHouse_OnFrame
    MAP_SCRIPT_ON_WARP_INTO_MAP_TABLE: PetalburgCity_WallysHouse_OnWarp
