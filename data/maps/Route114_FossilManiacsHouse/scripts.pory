mapscripts Route114_FossilManiacsHouse_MapScripts {
    Route114_FossilManiacsHouse_OnTransition
}

script Route114_FossilManiacsHouse_EventScript_FossilManiacsBrother {
	lock
	faceplayer
	goto_if_set FLAG_RECEIVED_TM_DIG, Route114_FossilManiacsHouse_EventScript_ReceivedDig
	msgbox Route114_FossilManiacsHouse_Text_HaveThisToDigLikeMyBrother, MSGBOX_DEFAULT
	giveitem ITEM_TM_DIG
	goto_if_eq VAR_RESULT, FALSE, Common_EventScript_ShowBagIsFull
	setflag FLAG_RECEIVED_TM_DIG
	release
	end

}

script Route114_FossilManiacsHouse_EventScript_ReceivedDig {
	msgbox Route114_FossilManiacsHouse_Text_DigReturnsYouToEntrance, MSGBOX_DEFAULT
	release
	end

}

script Route114_FossilManiacsHouse_EventScript_RockDisplay {
	msgbox Route114_FossilManiacsHouse_Text_RocksFillDisplayCase, MSGBOX_SIGN
	end

}

script Route114_FossilManiacsHouse_EventScript_Bookshelf {
	msgbox Route114_FossilManiacsHouse_Text_CrammedWithBooks, MSGBOX_SIGN
	end

}

text Route114_FossilManiacsHouse_Text_HaveThisToDigLikeMyBrother {
    format("My big brother's the FOSSIL MANIAC… He's a nice guy who loves FOSSILS…\p He loves digging holes, too… He dug this hole by himself…\p You can have this, so you can DIG holes just like my big brother…")
}

text Route114_FossilManiacsHouse_Text_DigReturnsYouToEntrance {
    format("If you make a POKéMON DIG inside a cave, you're returned to the entrance…")
}

text Route114_FossilManiacsHouse_Text_RocksFillDisplayCase {
    format("Rocks in peculiar shapes fill the display case…")
}

text Route114_FossilManiacsHouse_Text_CrammedWithBooks {
    format("THE COMPOSITION OF STRATA… HOW RAIN SHAPES THE LAND…\l STONES, SOIL, AND ROCK…\p It's crammed with books.")
}

