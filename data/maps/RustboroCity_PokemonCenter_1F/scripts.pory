	map_script MAP_SCRIPT_ON_TRANSITION, RustboroCity_PokemonCenter_1F_OnTransition
	map_script MAP_SCRIPT_ON_RESUME, CableClub_OnResume
	.byte 0

}

script RustboroCity_PokemonCenter_1F_EventScript_Nurse {
	setvar VAR_0x800B, LOCALID_RUSTBORO_NURSE
// FIXME undefined reference: 	call Common_EventScript_PkmnCenterNurse
	waitmessage
	waitbuttonpress
	release
	end

}

script RustboroCity_PokemonCenter_1F_EventScript_Man {
	msgbox RustboroCity_PokemonCenter_1F_Text_PokemonHavePersonalities, MSGBOX_NPC
	end

}

script RustboroCity_PokemonCenter_1F_EventScript_Boy {
	msgbox RustboroCity_PokemonCenter_1F_Text_MaleAndFemalePokemon, MSGBOX_NPC
	end

}

script RustboroCity_PokemonCenter_1F_EventScript_Girl {
	msgbox RustboroCity_PokemonCenter_1F_Text_HMCutNextDoor, MSGBOX_NPC
	end

}

text RustboroCity_PokemonCenter_1F_Text_PokemonHavePersonalities {
    format("My POKéMON has a NAIVE nature, and my friend's has a JOLLY nature.\p It's fascinating how POKéMON have personalities!")
}

text RustboroCity_PokemonCenter_1F_Text_MaleAndFemalePokemon {
    format("Just like people, there are male and female POKéMON.\p But no one seems to have any idea how they're different.")
}

text RustboroCity_PokemonCenter_1F_Text_HMCutNextDoor {
    format("The man next door gave me an HM!\p I used it to teach my POKéMON how to CUT down skinny trees.")
}

