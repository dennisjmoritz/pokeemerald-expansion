mapscripts SootopolisCity_Gym_B1F_MapScripts {
}


text SootopolisCity_Gym_B1F_Text_AndreaIntro {
    format("I'll show you the sublime techniques I learned from our LEADER JUAN!")
}

text SootopolisCity_Gym_B1F_Text_AndreaDefeat {
    format("Please forgive me, JUAN…")
}

text SootopolisCity_Gym_B1F_Text_AndreaPostBattle {
    format("Watch what happens if you crack all the floor tiles.")
}

text SootopolisCity_Gym_B1F_Text_CrissyIntro {
    format("You came all the way here, but you won't get to see JUAN.\p Not if you lose to me, you won't!")
}

text SootopolisCity_Gym_B1F_Text_CrissyDefeat {
    format("You're strong! I was fooled by your cute looks!")
}

text SootopolisCity_Gym_B1F_Text_CrissyPostBattle {
    format("You might be good enough to avoid being wiped out in one hit by JUAN.")
}

text SootopolisCity_Gym_B1F_Text_DaphneIntro {
    format("The sight of JUAN conducting a battle…\p The very beauty of it compelled me to become a TRAINER.")
}

text SootopolisCity_Gym_B1F_Text_DaphneDefeat {
    format("You battled with more beauty than I could muster…")
}

text SootopolisCity_Gym_B1F_Text_DaphnePostBattle {
    format("The grace you bring to battle is fabulous.\p Oh… I'm so fortunate to have found POKéMON.")
}

text SootopolisCity_Gym_B1F_Text_ConnieIntro {
    format("I should teach you how harsh battles can be.")
}

text SootopolisCity_Gym_B1F_Text_ConnieDefeat {
    format("Oh. You're strong.")
}

text SootopolisCity_Gym_B1F_Text_ConniePostBattle {
    format("I'll tell you something good.\p If you want to reach JUAN, you need to walk on each floor tile once.")
}

text SootopolisCity_Gym_B1F_Text_BridgetIntro {
    format("The POKéMON GYM of the highest level in the HOENN region…\p That's the SOOTOPOLIS GYM.")
}

text SootopolisCity_Gym_B1F_Text_BridgetDefeat {
    format("What a high level you are!")
}

text SootopolisCity_Gym_B1F_Text_BridgetPostBattle {
    format("Rather than being satisfied by being in a strong GYM, I imagine training in\l other places will make you stronger.\l But above all, it looks more fun.")
}

text SootopolisCity_Gym_B1F_Text_OliviaIntro {
    format("I train my POKéMON together with JUAN.\p Don't think I'm a pushover.")
}

text SootopolisCity_Gym_B1F_Text_OliviaDefeat {
    format("I was beaten…")
}

text SootopolisCity_Gym_B1F_Text_OliviaPostBattle {
    format("I think you have potential. Why don't you stay and train with us?")
}

text SootopolisCity_Gym_B1F_Text_TiffanyIntro {
    format("A graceful glide across the ice while crossing no lines…\p A TRAINER putting on that performance would be elegantly beautiful!")
}

text SootopolisCity_Gym_B1F_Text_TiffanyDefeat {
    format("Well, excuse me?!")
}

text SootopolisCity_Gym_B1F_Text_TiffanyPostBattle {
    format("This is really obvious, but how strong you are as a TRAINER has nothing to do\l with how young or old you are.")
}

text SootopolisCity_Gym_B1F_Text_BethanyIntro {
    format("When I'm with my POKéMON, the time flies by before you can say, “Oops!”")
}

text SootopolisCity_Gym_B1F_Text_BethanyDefeat {
    format("Oops!")
}

text SootopolisCity_Gym_B1F_Text_BethanyPostBattle {
    format("I wish I could forget about lost causes before I can manage an “Oops!”")
}

text SootopolisCity_Gym_B1F_Text_AnnikaIntro {
    format("I can battle with really rare POKéMON if you'd like.")
}

text SootopolisCity_Gym_B1F_Text_AnnikaDefeat {
    format("Oh, there now! Did you have a good look at my POKéMON?")
}

text SootopolisCity_Gym_B1F_Text_AnnikaPostBattle {
    format("I came to this GYM because JUAN praised me for my darling POKéMON.\p Oh, if only I'd met JUAN years ago when I was younger…")
}

text SootopolisCity_Gym_B1F_Text_BriannaIntro {
    format("Giggle… Your grim look is so charming.")
}

text SootopolisCity_Gym_B1F_Text_BriannaDefeat {
    format("Oh, dear. I went much too easy on you.")
}

text SootopolisCity_Gym_B1F_Text_BriannaPostBattle {
    format("You couldn't lay a finger on JUAN, I'm sure. Giggle…")
}

