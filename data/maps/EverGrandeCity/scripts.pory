#events for EverGrandeCity

script EverGrandeCity_MapScripts {
	map_script MAP_SCRIPT_ON_TRANSITION, EverGrandeCity_OnTransition
	.byte 0

}

script EverGrandeCity_EventScript_VictoryRoadSign {
	msgbox EverGrandeCity_Text_EnteringVictoryRoad, MSGBOX_SIGN
	end

}

script EverGrandeCity_EventScript_CitySign {
	msgbox EverGrandeCity_Text_CitySign, MSGBOX_SIGN
	end

}

script EverGrandeCity_EventScript_PokemonLeagueSign {
	msgbox EverGrandeCity_Text_EnteringPokemonLeague, MSGBOX_SIGN
	end

}

script EverGrandeCity_EventScript_SetVisitedEverGrande {
	setflag FLAG_VISITED_EVER_GRANDE_CITY
	setvar VAR_TEMP_1, 1
	end

}

text EverGrandeCity_Text_EnteringVictoryRoad {
    format("ENTERING VICTORY ROAD")
}

text EverGrandeCity_Text_EnteringPokemonLeague {
    format("ENTERING POKéMON LEAGUE CENTER GATE")
}

text EverGrandeCity_Text_CitySign {
    format("EVER GRANDE CITY\p “The paradise of flowers, the sea, and POKéMON.”")
}

